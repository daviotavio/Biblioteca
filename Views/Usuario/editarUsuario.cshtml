@model Usuario

<h1 class="text-center">Realize a edição de Usuários</h1>
<div class="jumbotron row justify-content-md-center">
  <form class="col-md-4" action="editarUsuario" method="post">
    <div class="form-group">
      <label>Nome</label>
      <input class="form-control" type="text" name="Nome" id="userNome">
    </div>
    <div class="form-group">
      <label>Login</label>
      <input class="form-control" type="text" name="login" id="userLogin">
    </div>
    <div class="form-group">
      <label>Senha</label>
      <input class="form-control" type="text" name="Senha" id="userSenha">
    </div>

    <select class="form-control" name="tipo" id="userTipo">
      <option value="@Usuario.ADMIN">Administrador</option>
      <option value="@Usuario.PADRAO">Padrão</option>
    </select><br>

    <input type="hidden" asp-for="Id">

    <input class="btn btn-success" type="submit" value="CONCLUIR EDIÇÃO">
  </form>
</div>