@model List<Usuario>

<div class="text-center">
  <h1>Usuários cadastrados no sistema</h1>
</div>

<p class="text-danger">@ViewData["Mensagem"]</p>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="row">Nome</th>
      <th scope="row">Login</th>
      <th scope="row">Tipo</th>
      <th scope="row"></th>
      <th scope="row"></th>
    </tr>
  </thead>

  <tbody>
    @foreach (Usuario u in Model)
    {
      <tr>
        <td>@u.Nome</td>
        <td>@u.Login</td>
        @if (u.Tipo == Usuario.ADMIN)
        {
          <td>Administrador</td>
        }
        else
        {
          <td>Padrão</td>
        }

        <td><a href="editarUsuario?id=@u.Id">Editar</a></td>
        <td><a href="ExcluirUsuario?id=@u.Id">Excluir</a></td>
      </tr>
    }
  </tbody>
</table><br>

<div class="text-center">
  <a class="btn btn-primary" href="RegistrarUsuarios">Registrar novo usuário</a>
</div>